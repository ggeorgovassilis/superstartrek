<project>
	<groupId>ggeorgovassilis</groupId>
	<artifactId>superstartrek</artifactId>
	<version>1.0-SNAPSHOT</version>
	<modelVersion>4.0.0</modelVersion>
	<name>Super Star Trek</name>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<version>3.1.0</version>
				<executions>
					<execution>
						<id>copy-resources</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.build.directory}/minified</outputDirectory>
							<resources>
								<resource>
									<directory>${project.basedir}</directory>
									<filtering>true</filtering>
									<includes>
										<include>**/*.css</include>
										<include>**/*.js</include>
										<include>**/*.png</include>
										<include>**/*.html</include>
									</includes>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.primefaces.extensions</groupId>
				<artifactId>resources-optimizer-maven-plugin</artifactId>
				<version>2.3.2</version>
				<executions>
					<execution>
						<id>optimize</id>
						<goals>
							<goal>optimize</goal>
						</goals>
						<configuration>
							<resourcesSets>
								<resourcesSet>
									<inputDir>${project.build.directory}/minified/js</inputDir>
									<includes>
										<include>**/*.js</include>
									</includes>
									<aggregations>
										<aggregation>
											<outputFile>${project.build.directory}/minified/lib.js</outputFile>
											<removeIncluded>true</removeIncluded>
										</aggregation>
									</aggregations>
								</resourcesSet>
								<resourcesSet>
									<inputDir>${project.build.directory}/minified/css</inputDir>
									<includes>
										<include>**/*.css</include>
									</includes>
								</resourcesSet>
								<resourcesSet>
									<inputDir>${project.build.directory}/minified</inputDir>
									<includes>
										<include>index.html</include>
									</includes>
								</resourcesSet>
							</resourcesSets>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>